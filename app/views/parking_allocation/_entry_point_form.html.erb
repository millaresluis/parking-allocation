<%= form_with model: ParkingEntryPoint.new, url: update_entry_point_path, id: "update_entry_point_form", local: true, html: { autocomplete: "off" } do |f| %>

    <div class="modal fade" id="update_entry_point_modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" aria-hidden="true">
            <div class="modal-content">

                <div class="modal-header justify-content-between">
                    <h1 class="modal-title fs-5">Set Entry Point</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label" for="">Entry Point</label>
                        <%=  select "parking_entry_point", :id,  grouped_options_for_select( [['Select an Entry Point', @parking_entry_points.collect {|v| [ "Entry #{v.id} (#{v.cardinal_direction.capitalize})", v.id ] } ]], selected: params[:parking_entry_point]), {prompt: 'Select an Entry Point'},  class: "form-control select2-tag", id: "parking_entry_point_direction" %>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label" for="">Status</label>
                        <%= f.select :vehicle_type, [["Select a Status", ""], ["Active", "active"], ["Inactive", "inactive"]], {}, class: "form-select select2-tag", placeholder: "Select a Status", id: "parking_entry_point_status" %>
                    </div>
                </div>

                <div class="modal-footer">
                    <div>
                        <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submit_btn" >Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%end%>