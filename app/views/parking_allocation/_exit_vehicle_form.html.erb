<!-- Modal -->
<%= form_with model: ParkingAllocation.new, url: update_parking_allocation_path, id: "new_exit_vehicle_form", local: true, html: { autocomplete: "off" } do |f| %>
    <%= hidden_field_tag "parking_allocation[vehicle_id]", nil, id: 'exit_vehicle_id'%>
    <%= hidden_field_tag "parking_allocation[vehicle_status]", "exiting", id: 'exit_vehicle_status'%>

    <div class="modal fade" id="new_exit_vehicle_modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" aria-hidden="true">
            <div class="modal-content">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="new_exit_vehicle_modal_title"></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label" for="parent_id">Parking Entry Time</label>
                        <%= f.text_field :datetime, class: "form-control read-only", autocomplete: "off", placeholder: "", id: "parking_allocation_datetime_in", readonly: true%>
                    </div>
                </div>

                <div class="modal-footer justify-content-between">
                    <div class="mb-3"><span class="text-danger b">*</span> <span class="fst-italic"> = Required</span></div>
                    <div>
                        <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submit_btn" >Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%end%>