<!-- Modal -->
<%= form_with model: ParkingAllocation.new, url: create_parking_allocation_path, id: "new_unpark_vehicle_form", local: true, html: { autocomplete: "off" } do |f| %>
    <%= hidden_field_tag "parking_allocation[vehicle_id]", nil, id: 'unpark_vehicle_id'%>
    <%= hidden_field_tag "parking_allocation[vehicle_type]", nil, id: 'unpark_vehicle_type'%>
    <%= hidden_field_tag "parking_allocation[parking_slot_id]", nil, id: 'unpark_parking_slot_id'%>
    <%= hidden_field_tag "parking_allocation[parking_entry_point]", nil, id: 'unpark_parking_entry_point'%>

    <%= hidden_field_tag "parking_receipt[vehicle_id]", nil, id: 'receipt_vehicle_id'%>
    <%= hidden_field_tag "parking_receipt[parking_slot_id]", nil, id: 'receipt_parking_slot_id'%>
    <%= hidden_field_tag "parking_receipt[parking_slot_type]", nil, id: 'receipt_parking_slot_type'%>
    <%= hidden_field_tag "parking_receipt[datetime_in]", nil, id: 'receipt_datetime_in'%>
    <%= hidden_field_tag "parking_receipt[datetime_out]", nil, id: 'receipt_datetime_out'%>

    <div class="modal fade" id="new_unpark_vehicle_modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" aria-hidden="true">
            <div class="modal-content">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="new_unpark_vehicle_modal_title"></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label" for="">Plate Number</label>
                        <%= f.text_field :plate_number_id, class: "form-control receipt_plate_number", autocomplete: "off", placeholder: "", readonly: true%>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label" for="">Vehicle Type</label>
                        <%= f.text_field :vehicle_type_text, class: "form-control", autocomplete: "off", placeholder: "", id: "unpark_vehicle_type_text", readonly: true%>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label" for="">Parking Type</label>
                        <%= f.text_field :parking_slot_type, class: "form-control", autocomplete: "off", placeholder: "", id: "unpark_parking_slot_type_text", readonly: true%>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label" for="parent_id">Parking Entry Time</label>
                        <%= f.text_field :datetime_in_text, class: "form-control read-only", autocomplete: "off", placeholder: "", id: "unpark_datetime_in_text", readonly: true%>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label" for="parent_id">Parking Exit Time</label>
                        <input type="text" class="form-control" id="unpark_datetime_out_text" name="parking_receipt[datetime_out]">
                    </div>

                </div>

                <div class="modal-footer justify-content-between">
                    <div class="mb-3 col-8"><span class="fst-italic">Note: 20/hour for vehicles parked in SP; 60/hour for vehicles parked in MP; 100/hour for vehicles parked in LP;</span></div>
                    <div>
                        <button type="button" class="btn cancel-btn" data-bs-target="#return_vehicle_modal" data-bs-toggle="modal">Back</button>
                        <button type="submit" class="btn btn-primary" id="submit_btn" >Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%end%>