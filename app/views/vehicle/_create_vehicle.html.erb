<!-- Modal -->
<%= form_with model: Vehicle.new, url: create_vehicle_path, id: "new_vehicle_form", local: true, html: { autocomplete: "off" } do |f| %>
    <div class="modal fade" id="new_vehicle_modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" aria-hidden="true">
            <div class="modal-content">

                <div class="modal-header">
                    <h1 class="modal-title fs-5">Add Vehicle</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label" for="parent_id">Vehicle Type</label> <span class="text-danger b">*</span>
                        <%= f.select :vehicle_type, @vehicle_type, {}, class: "form-select select2-tag", placeholder: "Select a Vehicle Type", id: "vehicle_type" %>
                    </div>

                    <div class="form-group mb-3">
                        <%= f.label :plate_number_id, "Plate Number", class: "form-label" %> <span class="text-danger b">*</span>
                        <%= f.text_field :plate_number_id, class: "form-control app-placeholder", autocomplete: "off", placeholder: "e.g. ABC-1234"%>
                    </div>
                </div>

                <div class="modal-footer justify-content-between">
                    <div class="mb-3"><span class="text-danger b">*</span> <span class="fst-italic"> = Required</span></div>
                    <div>
                        <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submit_btn" >Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%end%>